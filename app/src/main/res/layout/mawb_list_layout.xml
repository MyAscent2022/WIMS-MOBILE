<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="@drawable/card_uld"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope"
                android:gravity="left"
                android:lineSpacingExtra="-9sp"
                android:textColor="#263238"
                android:textSize="12sp"
                android:text="ULD NO." />

            <TextView
                android:id="@+id/uld_no"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-9sp"
                android:text="ONGOING"
                android:textColor="#0038A8"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/manrope"
                android:gravity="left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:textColor="#263238"
                        android:textSize="12sp"
                        android:text="FLIGHT NO." />

                    <TextView
                        android:id="@+id/flight_no"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="ONGOING"
                        android:textColor="#0038A8"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="left" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:textColor="#263238"
                        android:textSize="12sp"
                        android:text="ULD TYPE" />

                    <TextView
                        android:id="@+id/uld_type"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="ONGOING"
                        android:textColor="#0038A8"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="left" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/uld_images"
            android:layout_width="105dp"
            android:layout_height="84dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/upload_btn"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#00000000"
        android:dividerHeight="10dp">

    </ListView>

</LinearLayout>