<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">


    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_bg_light_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@drawable/info_card">

            <TextView
                android:id="@+id/uld_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope"
                android:lineSpacingExtra="-9sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2C2C2C"
                android:textSize="12sp"
                android:text="ULD NO."
                android:visibility="gone"/>

            <TextView
                android:id="@+id/uld_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope"
                android:lineSpacingExtra="-9sp"
                android:textStyle="bold"
                android:textColor="#0038A8"
                android:gravity="center"
                android:textSize="18sp"
                android:text="CARGO IMAGES"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cargo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/blue"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/medium_txt"
                android:text="CARGO IMAGES"
                android:visibility="visible"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/image_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

<!--                <ImageView-->
<!--                    android:id="@+id/picture1"-->
<!--                    android:layout_width="@dimen/_90sdp"-->
<!--                    android:layout_height="@dimen/_90sdp"-->
<!--                    android:src="@drawable/image_box" />-->

                <LinearLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/picture1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/camera"
                            android:layout_gravity="center">
                        </ImageView>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/retake_image1"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/retake_img"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/blue"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/delete_image1"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/trash"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="CARGO CONDITION" />


                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/search_bg"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="REMARKS" />

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_bg"
                    android:layout_marginTop="5dp"
                    android:hint="REMARKS"
                    android:fontFamily="@font/manrope"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/image_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <!--                <ImageView-->
                <!--                    android:id="@+id/picture1"-->
                <!--                    android:layout_width="@dimen/_90sdp"-->
                <!--                    android:layout_height="@dimen/_90sdp"-->
                <!--                    android:src="@drawable/image_box" />-->

                <LinearLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/picture2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/camera">
                        </ImageView>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/retake_image2"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/retake_img"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/blue"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/delete_image2"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/trash"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="CARGO CONDITION" />


                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/search_bg"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="REMARKS" />

                <EditText
                    android:id="@+id/remarks2"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_bg"
                    android:layout_marginTop="5dp"
                    android:hint="REMARKS"
                    android:fontFamily="@font/manrope"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/image_add">

            <ImageButton
                android:id="@+id/add"
                android:src="@drawable/add"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_130sdp"
                android:backgroundTint="#F5F5F9"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_100sdp"
        android:padding="@dimen/_19sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_square"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_btn"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/upload_image">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_circle_fill"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload All Images"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="-5sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>