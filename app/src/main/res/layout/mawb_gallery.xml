<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="vertical"
            android:background="@drawable/card_flight_three">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="-9sp"
                        android:textSize="12sp"
                        android:textColor="#FECE00"
                        android:text="FLIGHT NO." />

                    <TextView
                        android:id="@+id/flight_no"
                        android:layout_width="227dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="FLIGHT NO"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="-9sp"
                        android:textSize="12sp"
                        android:text="CLASS"
                        android:textColor="#FECE00"/>

                    <TextView
                        android:id="@+id/flight_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="CLASS"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="-9sp"
                        android:textSize="12sp"
                        android:text="MAWB NO."
                        android:textColor="#FECE00"/>

                    <TextView
                        android:id="@+id/mawb_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="MAWB NO"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="-9sp"
                        android:text="HAWB NO."
                        android:textSize="12sp"
                        android:textColor="#FECE00"/>

                    <TextView
                        android:id="@+id/hawb_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="HAWB NO"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center_horizontal|top"
                        android:lineSpacingExtra="-9sp"
                        android:text="PCS"
                        android:textSize="12sp"
                        android:textColor="#FECE00"/>

                    <TextView
                        android:id="@+id/pcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="PCS"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            app:cardCornerRadius="18dp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_height="@dimen/_360sdp"
            app:cardBackgroundColor="#fff"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="12dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/info_card">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARGO IMAGES"
                    android:fontFamily="@font/manrope"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="#0038A8"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ListView
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000">

                    </ListView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/upload_cargo_image_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/upload_cargo_image"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/manrope"
                android:text="Upload Cargo Images"
                android:textColor="@color/blue"
                android:textSize="12sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_cargo_image_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/view_cargo_image"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:fontFamily="@font/manrope"
                android:text="View Cargo Images"
                android:textColor="@color/blue"
                android:textSize="12sp">

            </Button>

        </LinearLayout>

        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/manrope"
            android:gravity="left"
            android:lineSpacingExtra="-9sp"
            android:text="CARGO IMAGES UPLOADED:"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="gone">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:backgroundTint="@color/light_grey"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/close_square" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/enter_btn"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/check_fill" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="-5sp"
                    android:text="Confirmation"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>
