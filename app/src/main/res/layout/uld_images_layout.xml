                        </ImageView>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/retake_image2"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/retake_img"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/blue"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/delete_image2"
                        android:layout_width="43dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/red"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:background="@drawable/trash"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="CARGO CONDITION" />


                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/search_bg"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="REMARKS" />

                <EditText
                    android:id="@+id/remarks2"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_bg"
                    android:layout_marginTop="5dp"
                    android:hint="REMARKS"
                    android:fontFamily="@font/manrope"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/image_add">

            <ImageButton
                android:id="@+id/add"
                android:src="@drawable/add"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_130sdp"
                android:backgroundTint="#F5F5F9"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_100sdp"
        android:padding="@dimen/_19sdp">


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_5sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_square"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_btn"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/upload_image">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_circle_fill"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload All Images"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="-5sp"/>
        </LinearLayout>


    </LinearLayout>

