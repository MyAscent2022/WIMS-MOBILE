<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mawb_card"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/manrope"-->
                <!--                    android:gravity="left"-->
                <!--                    android:lineSpacingExtra="-9sp"-->
                <!--                    android:text="INBOUND STATUS"-->
                <!--                    android:textColor="#EF9A33"-->
                <!--                    android:textSize="12sp"-->
                <!--                    android:textStyle="bold" />-->

                <!--                <TextView-->
                <!--                    android:id="@+id/status"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/manrope"-->
                <!--                    android:gravity="left"-->
                <!--                    android:lineSpacingExtra="-9sp"-->
                <!--                    android:text="ONGOING"-->
                <!--                    android:textColor="#EF9A33"-->
                <!--                    android:textSize="20sp"-->
                <!--                    android:textStyle="bold" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="MAWB NO."
                            android:textColor="#EF9A33"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mawb_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="MAWB NO."
                            android:textColor="#354546"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="CHECKER"
                            android:textColor="#EF9A33"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="CHECKER"
                            android:textColor="#263238"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="HAWB NO."
                            android:textColor="#EF9A33"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hawb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="HAWB NO."
                            android:textColor="#354546"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="LOCATION NO."
                            android:textColor="#EF9A33"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/location_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="LOCATION NO."
                            android:textColor="#263238"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/info_card"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:text="NO. OF ACTUAL PIECES"
                        android:textColor="#01256D"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/actual_pcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/search_bg"
                        android:fontFamily="@font/manrope"
                        android:hint="Input Actual Value"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope"
                                android:gravity="left"
                                android:lineSpacingExtra="-9sp"
                                android:text="WEIGHT"
                                android:textColor="#01256D"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/search_bg"
                                android:fontFamily="@font/manrope"
                                android:gravity="center_vertical"
                                android:hint="0"
                                android:lineSpacingExtra="-9sp"
                                android:paddingLeft="10dp"
                                android:textColor="#354546"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="VOLUME"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:lineSpacingExtra="-9sp"
                            android:textColor="#01256D"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="LENGTH"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:lineSpacingExtra="-9sp"
                            android:textColor="#01256D"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/volume"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_bg"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="12sp"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"  />
                        <EditText
                            android:id="@+id/length"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_bg"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="12sp"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"  />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="WIDTH"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:lineSpacingExtra="-9sp"
                            android:textColor="#01256D"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="HEIGHT"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope"
                            android:lineSpacingExtra="-9sp"
                            android:textColor="#01256D"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/width"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_bg"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="12sp"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"  />
                        <EditText
                            android:id="@+id/height"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/search_bg"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:autoSizeMaxTextSize="12sp"
                            app:autoSizeMinTextSize="3sp"
                            app:autoSizeStepGranularity="2sp"
                            app:autoSizeTextType="uniform"  />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:text="CARGO CATEGORY:"
                        android:textColor="#01256D"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:hint="Select Cargo Category"
                        android:textColorHint="@color/placeholder"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/placeholder"
                        app:placeholderTextColor="@color/placeholder">

                        <AutoCompleteTextView
                            android:id="@+id/cargo_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:maxLength="100"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope"
                                android:gravity="left"
                                android:lineSpacingExtra="-9sp"
                                android:text="CARGO CLASS"
                                android:textColor="#01256D"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:hint="Select Cargo Class"
                                android:textColorHint="@color/placeholder"
                                app:errorEnabled="true"
                                app:hintTextColor="@color/placeholder"
                                app:placeholderTextColor="@color/placeholder">

                                <AutoCompleteTextView
                                    android:id="@+id/cargo_class"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:maxLength="100"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope"
                                android:gravity="left"
                                android:lineSpacingExtra="-9sp"
                                android:text="CARGO STATUS"
                                android:textColor="#01256D"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:hint="Select Cargo Status"
                                android:textColorHint="@color/placeholder"
                                app:errorEnabled="true"
                                app:hintTextColor="@color/placeholder"
                                app:placeholderTextColor="@color/placeholder">

                                <AutoCompleteTextView
                                    android:id="@+id/cargo_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapWords"
                                    android:maxLength="100"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/upload_cargo_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/upload_cargo_image"
                            android:layout_width="@dimen/_240sdp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/yellow"
                            android:fontFamily="@font/manrope"
                            android:text="Upload Cargo Images"
                            android:textColor="@color/blue"
                            android:textSize="12sp">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_cargo_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/view_cargo_image"
                            android:layout_width="@dimen/_240sdp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/yellow"
                            android:fontFamily="@font/manrope"
                            android:text="View Cargo Images"
                            android:textColor="@color/blue"
                            android:textSize="12sp">

                        </Button>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:text="CARGO IMAGES UPLOADED:"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ListView
                            android:id="@+id/listView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:visibility="gone">

                        </ListView>

                    </ScrollView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:backgroundTint="@color/light_grey"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/close_square" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/confirm_cargo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/enter_btn"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/check_fill" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:lineSpacingExtra="-5sp"
                                android:text="Confirm"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </ScrollView>


    </LinearLayout>
</LinearLayout>