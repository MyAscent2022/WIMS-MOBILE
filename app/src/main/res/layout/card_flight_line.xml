<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/card_flight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-9sp"
            android:text="FLIGHT NO."
            android:textStyle="bold" />

        <TextView
            android:id="@+id/flight_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-9sp"
            android:text="FLIGHT NUMBER"
            android:textColor="#0038A8"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="@font/manrope"
            android:gravity="center" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="-9sp"
                    android:text="TRAVEL STATUS"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/travel_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-9sp"
                    android:text="ONGOING"
                    android:textColor="#EF9A33"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="-9sp"
                    android:text="FINISH FLIGHT"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/finish_flight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-9sp"
                    android:text="PENDING"
                    android:textColor="#EF9A33"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="-9sp"
                    android:text="TMR"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tmr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-9sp"
                    android:text="00:00"
                    android:textColor="#263238"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="-9sp"
                    android:text="TBS"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-9sp"
                    android:text="00:00"
                    android:textColor="#263238"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center_horizontal|top"
                    android:lineSpacingExtra="-9sp"
                    android:text="TBF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tbf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-9sp"
                    android:text="00:00"
                    android:textColor="#263238"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>