<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mainMenu.MainMenu"
    android:background="#F6F6F6">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="@dimen/_40sdp"
        android:clipToOutline="true">

        <LinearLayout
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_51sdp"
                android:layout_height="match_parent"
                android:background="@drawable/paircargologo">
            </ImageView>
            <LinearLayout
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent">

            </LinearLayout>

            <TextView
                android:id="@+id/wims"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_1sdp"
                android:text="WIMS"
                android:textAppearance="@style/wims"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"
            android:gravity="center"
            android:text="Main Menu"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/receive_cargo"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/white_bg_yellow_border"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_116sdp"
                        android:background="@drawable/white_bg_yellow_border">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="right">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_47sdp"
                                android:layout_height="@dimen/_47sdp"
                                android:background="@drawable/icon_receive" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_18sdp"
                                android:gravity="center"
                                android:text="RECEIVE"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="@dimen/_18ssp"
                                app:autoSizeMinTextSize="@dimen/_5ssp"
                                app:autoSizeStepGranularity="@dimen/_1ssp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CARGO"
                                android:textColor="@color/blue"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/store_cargo"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/white_bg_yellow_border"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_116sdp"
                        android:background="@drawable/white_bg_yellow_border">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_12sdp"
                            android:gravity="right">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".4"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_47sdp"
                                android:layout_height="@dimen/_47sdp"
                                android:background="@drawable/icon_storage" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_18sdp"
                                android:gravity="center"
                                android:text="STORE"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="@dimen/_18ssp"
                                app:autoSizeMinTextSize="@dimen/_5ssp"
                                app:autoSizeStepGranularity="@dimen/_1ssp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="CARGO"
                                android:textColor="@color/blue"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_130sdp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_logout"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sign_out_squre">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Log-out">

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>