<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="12dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/info_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CARGO DETAILS"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#0038A8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/manrope"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FLIGHT NO."
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#9A9A9A"
                android:fontFamily="@font/manrope"/>

            <TextView
                android:id="@+id/flight_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FLIGHT NO."
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#0038A8"
                android:fontFamily="@font/manrope"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="MAWB NO.:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mawb_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="MAWB NO"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#0038A8"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="HAWB NO.:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/hawb_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="HAWB NO"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#0038A8"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="TOTAL WEIGHT:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="TOTAL WEIGHT"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="CARGO CLASS:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cargo_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="CARGO CLASS"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="STORAGE PERSONNEL:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/storage_personnel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="PERSONNEL"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:lineSpacingExtra="-9sp"
                        android:text="RECEIVE PIECES:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rcv_pcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-9sp"
                        android:text="RECEIVE PCS"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/manrope"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#E7E7E7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="STORED ITEMS PIECES COUNT:"
                    android:textColor="#01256D"
                    android:fontFamily="@font/manrope"/>

                <EditText
                    android:id="@+id/stored_item_pcs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/search_bg"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/manrope"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="RACK NAME:"
                    android:textColor="#01256D"
                    android:fontFamily="@font/manrope"
                    android:layout_marginTop="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:hint="Select Rack Name"
                    android:textColorHint="@color/placeholder"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/placeholder"
                    app:placeholderTextColor="@color/placeholder">

                    <AutoCompleteTextView
                        android:id="@+id/rack_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="LAYER NAME:"
                    android:textColor="#01256D"
                    android:fontFamily="@font/manrope"
                    android:layout_marginTop="20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:hint="Select Layer Name"
                    android:textColorHint="@color/placeholder"

                    app:errorEnabled="true"
                    app:hintTextColor="@color/placeholder"
                    app:placeholderTextColor="@color/placeholder">

                    <AutoCompleteTextView
                        android:id="@+id/layer_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:inputType="textCapWords"
                        android:maxLength="100"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/close_square" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/enter_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/check_fill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="-5sp"
                android:text="Confirm this Cargo"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>